root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off

[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[*.sh]
indent_size = 4

[*.json]
indent_size = 2
insert_final_newline = false

[*.{md,rst}]
indent_size = 2
